{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "outDir": "./node_modules/.cache/tsc",
    "paths": {
      ":api_ref": ["./src/api_ref.ts"],
      ":assets/*": ["./src/assets/*"],
      ":auth/*": ["./src/auth/*"],
      ":common/*": ["./src/common/*"],
      ":database:moncomptepro": [
        "./src/database/moncomptepro/moncomptepro_pg.ts"
      ],
      ":database:moncomptepro/middleware": [
        "./src/database/moncomptepro/middleware.ts"
      ],
      ":hc": ["./packages/~/app/urls/index.ts"],
      ":health/*": ["./src/health/*"],
      ":legacy/*": ["./src/legacy/*"],
      ":mapping": ["./src/api/index.d.ts", "./src/api/mock.d.ts"],
      ":moderations/*": ["./src/moderations/*"],
      ":moncomptepro": ["./src/moncomptepro.d.ts"],
      ":organizations/*": ["./src/organizations/*"],
      ":package.json": ["./package.json"],
      ":proxy/*": ["./src/proxy/*"],
      ":ui/*": ["./src/ui/*"],
      ":welcome/*": ["./src/welcome/*"],
      ":www": ["./src/www.router"],
      "@~/app.api": ["./src/api/index.ts"],
      "hono-slotify/*": ["./src/hono-slotify/*"]
    },
    "plugins": [],
    "resolveJsonModule": true
  },
  "include": ["package.json", "src", "bin/src"],
  "references": [
    { "path": "packages/~/app/core/tsconfig.json" },
    { "path": "packages/~/app/urls/tsconfig.json" },
    { "path": "packages/~/infra/zammad/api/tsconfig.json" },
    { "path": "packages/~/infra/zammad/lib/tsconfig.json" }
  ]
}
