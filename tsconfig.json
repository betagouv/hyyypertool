{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "outDir": "./node_modules/.cache/tsc",
    "paths": {
      ":assets/*": ["./src/assets/*"],
      ":common/*": ["./src/common/*"],
      ":health/*": ["./src/health/*"],
      ":legacy/*": ["./src/legacy/*"],
      ":moderations/*": ["./src/moderations/*"],
      ":organizations/*": ["./src/organizations/*"],
      ":package.json": ["./package.json"],
      ":proxy/*": ["./src/proxy/*"],
      ":ui/*": ["./src/ui/*"],
      ":welcome/*": ["./src/welcome/*"],
      "hono-slotify/*": ["./src/hono-slotify/*"]
    },
    "plugins": [],
    "resolveJsonModule": true
  },
  "include": ["package.json", "src", "bin/src"],
  "references": [
    { "path": "packages/~/app/core/tsconfig.json" },
    { "path": "packages/~/app/urls/tsconfig.json" },
    { "path": "packages/~/infra/moncomptepro/database/tsconfig.json" },
    { "path": "packages/~/infra/zammad/api/tsconfig.json" },
    { "path": "packages/~/infra/zammad/lib/tsconfig.json" },
    { "path": "packages/~/moderations/api/tsconfig.json" },
    { "path": "packages/~/moderations/lib/tsconfig.json" },
    { "path": "packages/~/moderations/repository/tsconfig.json" },
    { "path": "packages/~/organizations/api/tsconfig.json" },
    { "path": "packages/~/organizations/lib/tsconfig.json" },
    { "path": "packages/~/users/api/tsconfig.json" },
    { "path": "packages/~/users/repository/tsconfig.json" }
  ]
}
