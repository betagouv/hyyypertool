{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      ":assets/*": ["./src/assets/*"],
      ":auth/*": ["./src/auth/*"],
      ":database:moncomptepro": [
        "./src/database/moncomptepro/moncomptepro_pg.ts"
      ],
      ":database:moncomptepro/middleware": [
        "./src/database/moncomptepro/middleware.ts"
      ],
      ":api_ref": ["./src/api_ref.ts"],
      ":common/*": ["./src/common/*"],
      ":health/*": ["./src/health/*"],
      ":hc": ["./src/client"],
      ":legacy/*": ["./src/legacy/*"],
      ":moderations/*": ["./src/moderations/*"],
      ":moncomptepro": ["./src/moncomptepro.d.ts"],
      ":organizations/*": ["./src/organizations/*"],
      ":package.json": ["./package.json"],
      ":ui/*": ["./src/ui/*"],
      ":welcome/*": ["./src/welcome/*"],
      ":proxy/*": ["./src/proxy/*"],
      ":www": ["./src/www.router"],
      "hono-slotify/*": ["./src/hono-slotify/*"],
      ":mapping": ["./src/api/index.d.ts", "./src/api/mock.d.ts"]
    },
    "plugins": [],
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "include": ["package.json", "src"]
}
