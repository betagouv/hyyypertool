{
  "name": "hyyypertool",
  "version": "2024.2.6",
  "private": true,
  "type": "module",
  "module": "src/bootstrap.ts",
  "scripts": {
    "build": "bun x npm-run-all --serial build:**",
    "build:api": "bun x tsc --project src/api/tsconfig.json > /dev/null || bun x tsc --project src/api/tsconfig.json",
    "build:tailwind": "bun x tailwindcss -i ./src/assets/tailwind.css -o ./public/assets/tailwind.css",
    "database:moncomptepro:migrator": "bun src/database/moncomptepro/bin/migration.ts",
    "database:moncomptepro:seed": "bun src/database/moncomptepro/bin/seed.ts",
    "dev": "bun --hot src/bootstrap.ts",
    "dev:inspect-brk": "bun --hot --inspect-brk src/bootstrap.ts",
    "dev:tailwind": "bun run build:tailwind --watch",
    "e2e": "cd e2e && bun run test",
    "fixtures:load": "bun x npm-run-all --serial database:moncomptepro:migrator database:moncomptepro:seed",
    "format": "bun x prettier --check .",
    "format:fix": "bun x prettier --write .",
    "start": "bun src/bootstrap.ts",
    "studio:moncomptepro": "bun x drizzle-kit studio --config src/database/moncomptepro/drizzle.config.ts",
    "test": "bun x npm-run-all --serial test:**",
    "test:type-check": "bun x tsc --noEmit"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ]
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.11.1",
    "@hono/sentry": "^1.0.1",
    "@hono/zod-validator": "0.1.11",
    "@lit-labs/motion": "1.0.7",
    "animate.css": "4.1.1",
    "await-to-js": "3.0.0",
    "drizzle-orm": "0.29.3",
    "error-custom-class": "10.0.0",
    "hono": "4.0.5",
    "hono-sessions": "0.3.4",
    "htmx.ext...chunked-transfer": "1.0.3",
    "htmx.org": "1.9.10",
    "hyperscript.org": "0.9.12",
    "lit": "3.1.2",
    "lodash.sortby": "4.7.0",
    "nprogress": "0.2.0",
    "openid-client": "5.6.4",
    "pg": "8.11.3",
    "query-string": "8.2.0",
    "static-path": "0.0.4",
    "tailwind-variants": "0.2.0",
    "ts-dedent": "2.2.0",
    "ts-pattern": "5.0.8",
    "youch": "3.3.3",
    "zod": "3.22.4",
    "zod-validation-error": "^3.0.2"
  },
  "devDependencies": {
    "@csmith/release-it-calver-plugin": "2023.12.0",
    "@release-it/conventional-changelog": "8.0.1",
    "@tailwindcss/typography": "0.5.10",
    "@tsconfig/bun": "1.0.3",
    "@types/lodash.sortby": "4.7.9",
    "bun-types": "1.0.28",
    "drizzle-kit": "0.20.14",
    "moncomptepro": "betagouv/moncomptepro#0ecf952c0d1cf980604e00fda799249d5a9b372d",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "release-it": "17.1.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "overrides": {
    "hono": "4.0.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git switch -c release/${version} && git push origin release/${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@csmith/release-it-calver-plugin": {
        "format": "yyyy.mm.minor"
      },
      "@release-it/conventional-changelog": {
        "ignoreRecommendedBump": true,
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "angular"
        }
      }
    }
  }
}
