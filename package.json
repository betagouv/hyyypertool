{
  "name": "hyyypertool",
  "version": "2023.11.15",
  "private": true,
  "type": "module",
  "module": "src/bootstrap.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun x npm-run-all --serial build:**",
    "build:tailwind": "bun x tailwindcss -i ./src/www/styles.css -o ./public/tailwind/styles.css",
    "dev": "bun --hot src/bootstrap.ts",
    "dev:inspect-brk": "bun --hot --inspect-brk src/bootstrap.ts",
    "dev:tailwind": "bun run build:tailwind --watch",
    "format": "bun x prettier --check .",
    "format:fix": "bun x prettier --write .",
    "start": "bun src/bootstrap.ts",
    "studio:moncomptepro": "bun x drizzle-kit studio --config src/database/moncomptepro/drizzle.config.ts",
    "test": "bun x npm-run-all --serial test:**",
    "test:type-check": "bun x tsc --noEmit"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ]
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.11.0",
    "@hono/zod-validator": "0.1.11",
    "@lit-labs/motion": "1.0.6",
    "animate.css": "4.1.1",
    "await-to-js": "3.0.0",
    "drizzle-orm": "^0.29.2",
    "hono": "3.11.11",
    "hono-sessions": "0.3.3",
    "htmx.ext...chunked-transfer": "^1.0.1",
    "htmx.org": "1.9.10",
    "hyperscript.org": "0.9.12",
    "jose": "^5.2.0",
    "lit": "3.1.0",
    "lodash.sortby": "4.7.0",
    "lodash.xor": "^4.5.0",
    "openid-client": "^5.6.2",
    "pg": "^8.11.3",
    "query-string": "8.1.0",
    "tailwind-variants": "0.1.19",
    "ts-pattern": "5.0.6",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.10",
    "@tsconfig/bun": "1.0.1",
    "@types/lodash.sortby": "4.7.9",
    "@types/lodash.xor": "^4.5.9",
    "bun-types": "1.0.20",
    "drizzle-kit": "^0.20.9",
    "moncomptepro": "betagouv/moncomptepro",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3"
  },
  "overrides": {
    "hono": "3.11.11"
  }
}
