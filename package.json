{
  "name": "hyyypertool",
  "version": "2024.2.8",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/~/app/*",
    "packages/~/config/*",
    "packages/~/infra/moncomptepro/*",
    "packages/~/infra/zammad/*",
    "packages/~/moderations/*",
    "packages/~/organizations/*",
    "packages/~/users/*"
  ],
  "scripts": {
    "build": "bun x npm-run-all --serial build:*",
    "build:tailwind": "bun x tailwindcss -i ./packages/~/app/ui/tailwind.css -o ./public/assets/tailwind.css",
    "build:tsc": "bun x tsc --build",
    "database:moncomptepro:migrator": "bun run database:moncomptepro:run migration",
    "database:moncomptepro:run": "bun run --cwd packages/~/infra/moncomptepro/database",
    "database:moncomptepro:seed": "bun run database:moncomptepro:run seed",
    "dev": "bun --hot bin/src/index.ts",
    "dev:api": "bun x run-z dev:api:tsc dev:api:cp dev:api:format",
    "dev:api:cp": "cp './node_modules/.cache/tsc/src/api/index.d.ts' './packages/~/app/urls/src/pattern.d.ts'",
    "dev:api:format": "bun run --cwd packages/~/app/urls format",
    "dev:api:tsc": "bun run build:tsc",
    "dev:inspect-brk": "bun --hot --inspect-brk bin/src/index.ts",
    "dev:tailwind": "bun run build:tailwind --watch",
    "e2e:install": "cd e2e && pnpm install",
    "e2e:run": "cd e2e && bun run",
    "fixtures:load": "bun x run-z database:moncomptepro:migrator database:moncomptepro:seed",
    "format": "bun x prettier --check .",
    "format:fix": "bun x prettier --write .",
    "start": "bun bin/src/index.ts",
    "studio:moncomptepro": "bun run database:moncomptepro:run studio",
    "test": "bun x run-z test:type-check test:all",
    "test:all": "bun x run-z ./packages/~/// test/=if-present",
    "test:type-check": "bun run build:tsc"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ]
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.11.1",
    "@hono/sentry": "1.0.1",
    "@hono/zod-validator": "0.1.11",
    "@lit-labs/motion": "1.0.7",
    "@~/app.core": "workspace:*",
    "@~/app.middleware": "workspace:*",
    "@~/app.ui": "workspace:*",
    "@~/app.urls": "workspace:*",
    "@~/moderations.api": "workspace:*",
    "@~/moderations.lib": "workspace:*",
    "@~/moderations.repository": "workspace:*",
    "@~/moncomptepro.database": "workspace:*",
    "@~/organizations.lib": "workspace:*",
    "@~/users.api": "workspace:*",
    "@~/users.repository": "workspace:*",
    "@~/zammad.api": "workspace:*",
    "animate.css": "4.1.1",
    "await-to-js": "3.0.0",
    "consola": "3.2.3",
    "drizzle-orm": "0.29.4",
    "error-custom-class": "10.0.0",
    "hono": "4.0.8",
    "hono-sessions": "0.3.4",
    "htmx.ext...chunked-transfer": "1.0.3",
    "htmx.org": "1.9.10",
    "hyperscript.org": "0.9.12",
    "lit": "3.1.2",
    "lodash.sortby": "4.7.0",
    "openid-client": "5.6.4",
    "pg": "8.11.3",
    "tailwind-variants": "0.2.0",
    "ts-dedent": "2.2.0",
    "ts-pattern": "5.0.8",
    "youch": "3.3.3",
    "zod": "3.22.4",
    "zod-validation-error": "3.0.3"
  },
  "devDependencies": {
    "@csmith/release-it-calver-plugin": "2023.12.0",
    "@release-it/conventional-changelog": "8.0.1",
    "@tailwindcss/typography": "0.5.10",
    "@tsconfig/bun": "1.0.4",
    "@types/lodash.sortby": "4.7.9",
    "bun-types": "1.0.29",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "release-it": "17.1.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "overrides": {
    "hono": "4.0.8"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git switch -c release/${version} && git push origin release/${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@csmith/release-it-calver-plugin": {
        "format": "yyyy.mm.minor"
      },
      "@release-it/conventional-changelog": {
        "ignoreRecommendedBump": true,
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "angular"
        }
      }
    }
  }
}
