{
  "name": "hyyypertool",
  "module": "src/bootstrap.ts",
  "type": "module",
  "version": "2023.11.15",
  "dependencies": {
    "@elysiajs/html": "^0.7.3",
    "@kitajs/html": "^3.0.8",
    "@kitajs/ts-html-plugin": "^1.3.0",
    "elysia": "^0.7.25",
    "elysia-autoroutes": "^0.4.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "bun-types": "^1.0.10",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build:tailwind": "bun x tailwindcss -i ./src/www/styles.css -o ./public/tailwind/styles.css",
    "build": "bun x npm-run-all --serial build:**",
    "dev": "bun --hot src/bootstrap.ts",
    "start": "bun src/bootstrap.ts",
    "test:xss-scan": "xss-scan",
    "test": "bun x npm-run-all --serial test:**"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ]
